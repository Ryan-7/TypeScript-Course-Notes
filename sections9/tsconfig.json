{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5", // which version of JS to compile to 
        "noImplicitAny": false, // gives error if variables are not explicity given a type like, let name; can still use type any
        "sourceMap": false, // allows access to the .ts file in chrome dev tools for debugging in browser 
        "strictNullChecks": true,
        "noEmitOnError": false,  // if set to true, it will not compile if there is a compilation error 
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules"
    ]
}